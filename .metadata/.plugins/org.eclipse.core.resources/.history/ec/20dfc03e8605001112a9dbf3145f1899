package formatTask;

public class FormatTask02 {
	public static void main(String[] args) {
//      %자릿수d
//      %5d
      
//      국어점수, 영어점수, 수학점수를 받아서 서식에 맞게 출력
//      이름: 이규학
//      수학:    20점
//      국어:    40점
//      영어:    15점
//      총점:    75점
		
		String name = null;
		int math = 0, korean = 0, english = 0, total = 0;
		String nameFormat = null, mathFormat = null, koreanFormat = null, englishFormat = null, totalFormat = null;
		
		name = "URA";
		math = 99;
		korean = 50;
		english = 60;
		total = math + korean + english;
		
		nameFormat = "이름: %10s\n";
		mathFormat = "수학: %10d\n";
		koreanFormat = "국어: %10d\n";
		englishFormat = "영어: %10d\n";
		totalFormat = "총점: %10d\n";
		
		
		System.out.printf(nameFormat, name);
		System.out.printf(mathFormat, math);
		System.out.printf(koreanFormat, korean);
		System.out.printf(englishFormat, english);
		System.out.printf(totalFormat, total);
	}
}
